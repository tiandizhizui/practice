<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.ld.UserMapper">
	<select id="FindUserByName" parameterType="String" resultType="com.ld.entity.User">
		select u_id as id,u_name as name,u_realname as realName,u_password as passWord,u_img as img,r_ids as rolesStr 
		from `user` where u_name=#{name}
	</select>
</mapper>